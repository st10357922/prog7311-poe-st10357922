@model AgriEnergyConnect.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<!-- Bootstrap responsive layout -->
<!-- Reference: https://getbootstrap.com/docs/5.3/layout/grid/ -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card for visual separation -->
            <!-- Reference: https://getbootstrap.com/docs/5.3/components/card/ -->
            <div class="card shadow border-0">
                <div class="card-header bg-green text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <!-- Razor form using Tag Helpers -->
                    <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms -->
                    <form asp-action="Create">
                        <!-- Summary of validation errors -->
                        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/models/validation -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <!-- Product Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="Enter category" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <!-- Production Date -->
                        <div class="mb-3">
                            <label asp-for="ProductionDate" class="form-label"></label>
                            <input asp-for="ProductionDate" type="date" class="form-control" />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FarmerId" class="form-label"></label>
                            <input asp-for="FarmerId" class="form-control" placeholder="Enter Farmer ID" />
                            <span asp-validation-for="FarmerId" class="text-danger"></span>
                        </div>
                        <!-- Submit and navigation buttons -->
                        <!-- Reference: https://getbootstrap.com/docs/5.3/components/buttons/ -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            <button type="submit" class="btn bg-green btn-green">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <!-- Injects client-side validation script partial -->
        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/partial -->
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

