@model IEnumerable<AgriEnergyConnect.Models.FarmerProfile>

@{
    ViewData["Title"] = "Farmer Profiles";
}

<!-- Bootstrap responsive layout container -->
<!-- Reference: https://getbootstrap.com/docs/5.3/layout/grid/ -->
<div class="container mt-5">
    <div class="card shadow border-0">
        <!-- Card header with green background and white text -->
        <!-- Reference: https://getbootstrap.com/docs/5.3/components/card/ -->
        <div class="card-header bg-green text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>

            <!-- Create New button styled as light and small with Bootstrap -->
            <!-- Reference: https://getbootstrap.com/docs/5.3/components/buttons/ -->
            <a asp-action="Create" class="btn btn-light btn-sm text-success fw-bold">+ Create New</a>
        </div>

        <!-- Card body holds the data table -->
        <div class="card-body">
            <!-- Bootstrap-styled table -->
            <!-- Reference: https://getbootstrap.com/docs/5.3/content/tables/ -->
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-success">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.UserId)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @* Display a message if no records exist *@
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No farmer profiles available.</td>
                        </tr>
                    }
                    else
                    {
                        @* Loop through each farmer profile *@
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                                <td class="text-center">
                                    <!-- Action buttons with Bootstrap outline styles -->
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success me-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


