@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!-- Bootstrap layout container -->
<!-- Reference: https://getbootstrap.com/docs/5.3/layout/grid/ -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Bootstrap card component for structured UI -->
            <!-- Reference: https://getbootstrap.com/docs/5.3/components/card/ -->
            <div class="card shadow border-0">
                <div class="card-header bg-green text-white">
                    <!-- Displays the page title -->
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <!-- Login form begins -->
                    <!-- Form binding and tag helpers used -->
                    <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms -->
                    <form id="account" method="post">
                        <h5 class="mb-4">Use your email and password to log in</h5>

                        <!-- Displays model-level validation messages -->
                        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/models/validation -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Email input using ASP.NET Core Tag Helpers -->
                        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me checkbox -->
                        <!-- Bootstrap form-check styling -->
                        <!-- Reference: https://getbootstrap.com/docs/5.3/forms/checks-radios/ -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Submit button styled with custom green class -->
                        <!-- Custom class .bg-green and .btn-green are defined in site.css -->
                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn bg-green btn-green btn-lg">Log in</button>
                        </div>

                        <!-- Register link -->
                        <!-- Routing handled via Razor Pages -->
                        <div class="text-center">
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                    <!-- End form -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Injects client-side validation script partial -->
    <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/partial -->
    <partial name="_ValidationScriptsPartial" />
}


