@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Bootstrap layout container -->
<!-- Reference: https://getbootstrap.com/docs/5.3/layout/grid/ -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card for form presentation -->
            <!-- Reference: https://getbootstrap.com/docs/5.3/components/card/ -->
            <div class="card shadow border-0">
                <div class="card-header bg-green text-white">
                    <!-- Page header from ViewData -->
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <!-- Registration form using Razor Pages -->
                    <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h5 class="mb-4">Create a new account</h5>

                        <!-- Summary for validation messages -->
                        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/models/validation -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Email input field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password input field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password input field -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="confirm password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Role selection dropdown -->
                        <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms -->
                        <div class="mb-4">
                            <label asp-for="Input.Role" class="form-label">Select Role</label>
                            <select asp-for="Input.Role" class="form-select" asp-items="Model.RoleList">
                                <option value="">-- Choose a role --</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <!-- Submit button styled with green -->
                        <button id="registerSubmit" type="submit" class="btn bg-green btn-green w-100">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Injects client-side validation scripts -->
    <!-- Reference: https://learn.microsoft.com/en-us/aspnet/core/mvc/views/partial -->
    <partial name="_ValidationScriptsPartial" />
}

